{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".", // monorepo-wide for paths aliases
    "paths": {
      "@example-org/common": ["packages/common/src/index.ts"],
      "@example-org/common/*": ["packages/common/src/*"]
    },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // skip node_modules type checking for faster builds
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },

  "exclude": ["node_modules", "dist", ".turbo", ".pnpm-store", "**/dist/**", "**/node_modules/**"]
}
